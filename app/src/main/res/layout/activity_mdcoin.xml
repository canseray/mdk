<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.MDCoinActivity">

    <View
        android:id="@+id/mdcoin_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <View
        android:id="@+id/mdcoin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <Button
        android:id="@+id/my_gift"
        android:text="@string/my_gift_text"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/mdcoin_bottom"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/black_orange_corner_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/scan_code"
        android:text="@string/scan_qr_code"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/mdcoin_bottom"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/black_blue_corner_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>



    <TextView
        android:id="@+id/qr_code_result"
        app:layout_constraintTop_toBottomOf="@id/mdcoin_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>