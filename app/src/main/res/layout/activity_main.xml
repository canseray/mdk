<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/anasayfa_arkaplan"
    tools:context=".ui.home.MainActivity">

    <View
        android:id="@+id/header_view"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/header_view"
        app:layout_constraintBottom_toBottomOf="@id/header_view"
        app:layout_constraintStart_toStartOf="@id/header_view"
        android:src="@mipmap/gizli_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/header_view"
        app:layout_constraintBottom_toBottomOf="@id/header_view"
        app:layout_constraintStart_toStartOf="@id/header_view"
        app:layout_constraintEnd_toEndOf="@id/header_view"
        android:src="@mipmap/header_img"
        android:layout_width="100dp"
        android:layout_height="80dp"/>
    <ImageView
        android:layout_marginRight="-2dp"
        app:layout_constraintTop_toTopOf="@id/header_view"
        app:layout_constraintBottom_toBottomOf="@id/header_view"
        app:layout_constraintEnd_toEndOf="@id/header_view"
        android:src="@mipmap/qrkod"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <GridLayout
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:useDefaultMargins="true"
        android:rowCount="4"
        android:columnCount="3"
        app:layout_constraintTop_toBottomOf="@+id/header_view"
        app:layout_constraintBottom_toTopOf="@+id/bottom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/kuaforhizmetleri"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:gravity="center"
                android:textColor="#fff"
                android:text="@string/hairdresser_service"
                android:lines="2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/guzellikhizmetleri"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/beauty_service"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/esteklinikhizmetleri"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/aesthetic_service"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/bildirimler"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/notifications"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mdkoin"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/mdcoin"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ikramlarimiz"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/treats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/kampanyalar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/campaign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/hakkimizda"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/iletisim"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/gorusveoneriler"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/suggestion"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/randevual"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/appointment"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_trans"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="120dp"
            android:layout_height="144dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ckeckinyap"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/check_in"
                    android:lines="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>

    <View
        android:id="@+id/bottom_view"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        app:layout_constraintStart_toStartOf="@id/bottom_view"
        app:layout_constraintEnd_toEndOf="@id/bottom_view"
        app:layout_constraintTop_toTopOf="@id/bottom_view"
        app:layout_constraintBottom_toBottomOf="@id/bottom_view"
        android:text="@string/home_text"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>